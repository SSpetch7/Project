<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    

<div class="container mt-4">
    <form action='/item/<%= item._id %>?_method=PUT' method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label  class="form-label">Name</label>
            <input type="text"  class="form-control" name = 'item[name]' placeholder="<%= item.name %>" value = "<%= item.name %>" >
        </div>
        <div class="mb-3">
            <label  class="form-label">Image</label>
            <img src="<%= item.image %>" width = '300px' height="auto">
            <input type="file"  class="form-control" name = 'image' accept="image/*" >
        </div>
        <div class="mb-3">
            <label  class="form-label">Description</label>
            <input type="text"  class="form-control" name = 'item[desc]' placeholder="<%= item.desc %>" value = "<%= item.desc %>" >
        </div>
        <div class="mb-3">
            <label  class="form-label">Price</label>
            <input type="text"  class="form-control" name = 'item[price]' placeholder="<%= item.price %>" value = "<%= item.price %>" >
        </div>
        <button type="submit" class='btn btn-primary'>Submit</button>
        <a href="/">Go to Back</a>
    </form>
</div>