                <a class="nav-link btn-outline-success" id='logButton' href="/login">Log in</a>
              </li>
            </ul>
            <% } else { %>
              <ul class="navbar-nav ">
                <li class="nav-item">
                  <a class="nav-link btn-outline-success" id='signButton' href="/logout">Log out</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link btn-outline-success" id='logButton' href="#"> <%= currentUser.username %> </a>
                </li>
                
              </ul>
              <% } %>
          </div>
        </div>
